<div class="modal" id="new_account" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Agregar Cuenta</h3>
  </div>
  <div class="modal-body">
    <%= simple_form_for(@account, :html => {:class => "form-horizontal"}, :remote => true) do |f| %>
	  <%= f.error_notification %>
	  <div class="inputs">
	 	<%= f.input :name, :label => "Empresa", :autofocus => true %>
		<h4>Usuario</h4>
		<%= f.fields_for :users do |user_form| %>
		    <%= user_form.input :email, :autofocus => false %>
		    <%= user_form.input :password, :required => true, :label => "Contraseña" %>
		<% end %>
	  </div>
	  <div class="modal-footer">
	    <button class="btn" data-dismiss="modal" aria-hidden="true">Cerrar</button>
		<%= f.button :submit, "Guardar", :class => "btn btn-primary" %>
	  </div>
	<% end %>
  </div>
</div>