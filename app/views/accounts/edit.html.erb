<div class="input-append" id="edit_account">
<%= form_for @account, :remote => true do |f| %>
  <%= f.text_field :name, :class => "edit_account_name" %><%= f.submit  "Cambiar nombre", :class => "btn btn-large", :id => "change_name_button", :style => "display: none" %>
<% end %>
</div>


<div style="float: right; margin-top: -5px">
	<%= link_to "<i class='icon-plus icon-white'></i> Agregar Usuario".html_safe , new_user_path(:account_id => @account.id), 
		:class => "btn btn-primary btn-small", :id => "new_user_button", "data-account_id" => @account.id, :remote => true%>
</div>
<h3>Usuarios</h3>
<table id="users" class="table table-striped table-condensed">
	<tbody>
		<tr>
			<th>Nombre</th>
			<th>Contrase√±a</th>
			<th>Acciones</th>
		</tr>
		<% @account.users.each do |user| %>
			<%= render :partial => "user", :locals => {:user => user}%>
		<% end %>
	</tbody>
</table>
<div id="user_modal"/>