<div id="search-bar">
	
	<%= form_tag "", :method => :get do %>
		<div class="input-prepend input-append">
			<%= request_search_field("De:", "remitente@example.com", "email", "src_email_address") -%><%= request_search_field("Para:", "destinatario@example.com", "email", "to") -%><%= request_search_field("Desde:", "09/10/2012", "date", "date_start") %><%= request_search_field("Hasta:", "09/11/2012", "date", "date_end") %>
			<%= button_tag "Buscar correos", :class => "btn btn-success"%>
			<%= %>
		</div>
	<% end %>
</div>

<% if @requests.empty? %>
	<div class="alert" style="text-align: center; margin-top: 10px; padding: 20px;">
		<h3>No se encontraron correo</h3>
	</div>
<% else %>
<div id="requests">
	<table class="table table-striped table-condensed">
		<tbody>
			<tr>
				<th>Fecha</th>
				<th>Origen</th>
				<th>De</th>
				<th>Para</th>
				<th>Tama√±o</th>
				<th>Estado</th>
			</tr>
			<% @requests.each do |request| %>
				<tr class="request-row">
					<td class="date" style="padding-bottom:10px; text-align: right; padding-right: 15px">
						<%= link_to request.queue_id, request_path(request._id) %><br/>
						<%= l request.created_at.to_date, :format => :month_day %> 
						<%= l request.created_at, :format => :time_only%>
						<br/>
					</td>
					<td><%= request.src_ipaddress %></td>
					<td>
						<%= truncate request.src_email_address, :length => 40 %> <br/>
						<br/>
					</td>
					<td>
						<%= request.dst_email_address[0..4].join(", ")%>
					</td>
					<td><%= number_to_human_size request.size %></td>
					<td class="stats">
						<span class="status label label-success"><%= request.status_name %></span> 
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<% end %>