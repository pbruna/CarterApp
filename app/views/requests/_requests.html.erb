<div id="requests">
	<table class="table table-striped table-condensed">
		<tbody>
			<tr>
				<th>Fecha</th>
				<th>Origen</th>
				<th>De</th>
				<th>Para</th>
				<th>Tama√±o</th>
				<th>Estado</th>
			</tr>
			<% @requests.each do |request| %>
				<tr class="request-row">
					<td class="date" style="padding-bottom:10px; width: 10%; padding-right: 15px">
						<%= link_to request.queue_id, request_path(request._id, :managed_account => params[:managed_account]) %><br/>
						<%= l request.created_at.to_date, :format => :month_day %> 
						<%= l request.created_at, :format => :time_only%>
						<br/>
					</td>
					<td><%= request.src_ipaddress %></td>
					<td>
						<%= truncate request.src_email_address, :length => 40 %> <br/>
						<br/>
					</td>
					<td>
						<%= request.dst_email_address[0..4].join(", ")%>
					</td>
					<td><%= number_to_human_size request.size %></td>
					<td class="stats">
						<span class="<%= request_label(request)%>"><%= request.status_name %></span> 
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>