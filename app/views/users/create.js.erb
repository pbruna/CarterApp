<% if @user.errors.size > 0 %>
	$("#new_user").modal("hide");
	$("#new_user.modal").remove();
	$('#user_modal').append('<%= j render("modal_new_user")%>');
	$("#new_user").modal("show");
<% else %>
	$("#new_user").modal("hide");
	$("#new_user.modal").remove();
	window.location = "<%= edit_account_path(@user.account_id)%>"
<% end %>